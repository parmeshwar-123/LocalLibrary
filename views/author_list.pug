extends layout 

block content

    h1= title 
    if author_list.length 
        ul 
            each  author in author_list  
                li  
                    a(href=author.url)= author.name
                    | (#{author.formated_date_of_birth} - #{author.formated_date_of_death || "null"});

    else  
        p No authors yet!